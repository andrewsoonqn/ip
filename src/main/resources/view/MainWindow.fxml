<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0" stylesheets="@../css/main-window.css"
            xmlns="http://javafx.com/javafx/17" fx:controller="arnold.ui.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" hvalue="1.0" prefHeight="558.0"
                    prefWidth="400.0" vvalue="1.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="400.0"/>
            </content>
        </ScrollPane>
        <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="42.0" promptText="Type a message..."
                   AnchorPane.bottomAnchor="4.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="86.0"/>
        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="42.0"
                prefWidth="74.0" text="Send" AnchorPane.bottomAnchor="4.0" AnchorPane.rightAnchor="8.0"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
    </padding>
</AnchorPane>
